<div class="posts pb-md-4">
  <div class="container">
    <div class="row">
      <% @posts.each do |post| %>
        <section class="col-md-4">
          <!-- post view -->
          <div class="card mb-4">
            <div class="card-body">
              <% if post.cover_photo.attached? %>
                <%= image_tag post.cover_photo.variant(resize: "300x200")%>
              <% end %>
              <h5 class="card-title">
                <%= post.title %>
              </h5>
              <p class="card-text">
                <%= post.content %>
              </p>
              <%= link_to 'View details', blog_path(post), class:"btn btn-primary" %>
            </div>
          </div>
        </section>
      <% end %>
    </div>
  </div>
</div>